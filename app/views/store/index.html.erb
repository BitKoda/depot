<div class="w-full">
  <%= render 'notice' %>
  <h1 class="font-bold text-xl mb-6 pb-2 border-b-2">Your Pragmatic Catalog </h1>
  <% if session[:counter] > 5 %>
    <p class="my-2">Cart viewed <%= pluralize(session[:counter], 'time') %></p>
  <% end %>

  <%= turbo_stream_from 'products' %>
  
  <ul>
    <% cache @products do %>
      <% @products.each do |product| %>
        <% cache product do %>
          <%= render partial: 'product', object: product %>
        <% end %>
      <% end %>
    <% end %>
  </ul>
</div>
